# Configurações de Produção para VPS
# IMPORTANTE: Configure estas variáveis na sua VPS

# Credenciais da Netplay (CONFIGURE COM SUAS CREDENCIAIS REAIS)
NETPLAY_USERNAME=seu_usuario@netplay.com
NETPLAY_PASSWORD=sua_senha_segura

# Configurações do Servidor
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=production
DEBUG=false

# Configurações de Segurança
SECRET_KEY=sua_chave_secreta_muito_longa_e_segura_aqui_123456789
ALLOWED_HOSTS=seu-dominio.com,www.seu-dominio.com,IP_DA_VPS
CORS_ORIGINS=https://seu-dominio.com,https://www.seu-dominio.com

# Configurações de Performance
WORKERS=4
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100
TIMEOUT=30
KEEP_ALIVE=5

# Configurações de Log
LOG_LEVEL=INFO
LOG_FILE=/var/log/netplay/app.log

# Configurações de Database
DATABASE_PATH=/opt/netplay/netplay.db

# SSL/HTTPS (se usando certificado próprio)
# SSL_CERT_PATH=/etc/ssl/certs/netplay.crt
# SSL_KEY_PATH=/etc/ssl/private/netplay.key